  <% name ||= "Crear" %>
  <h1>  <%= name%>  articulo</h1>
  <%= form_for(@article) do |f| %>
        <% @article.errors.full_messages.each do |message|%>
          <div class="be-red white top_space"> 
            <%= message %>

          </div>
        <%end%>   
        <div class="field">
          <%= f.text_field :title, placeholder:"Titulo del articulo", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.text_area :body, placeholder:"Escribe el articulo",style:"height:300px",class:"form-control" %>
        </div>
        <div class="field">
          <%= f.submit "Guardar" ,class:"btn be-red white "%>
        </div>
      <%end%>